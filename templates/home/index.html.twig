{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    <div class="list mt-4">
        <div class="row">
            {% for product in products %}
                <div class="col-6 mb-4">
                    <article class="card">
                        <div class="card-body">
                            <h4 class="card-title"><a href="{{ path("product.details", {id: product.id}) }}">{{ product.name }}</a></h4>
                            <p class="card-text"><a href="{{ path("product.details", {id: product.id}) }}">{{ product.description[:212] }}...</a></p>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
